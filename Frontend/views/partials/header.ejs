    </ul>
    <% if(logStatus) { %>
        <div class="col-md-3 text-end d-flex flex-column align-items-center justify-content-center">
            <a class="btn btn-primary" href="/dashboard" role="button">Dashborad</a>
        </div>
        <% } else { %>
            <div class="col-md-3 text-end">
                <a class="btn btn-outline-primary fw-bold" href="/sign-up" role="button">Sign Up</a>
                <a class="btn btn-primary fw-bold" href="/login" role="button">Login</a>
            </div>
            <% } %>

